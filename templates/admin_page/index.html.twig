{% extends 'base.html.twig' %}

{% block main_content %}
    <section>
        <h2>Tableau de bord</h2>
        <p>Bienvenue sur le tableau de bord de l'administration. Vous pouvez visualiser ici les statistiques et les données importantes.</p>
        <div class="dashboard-stats">
            <div class="stat">
                <h2>Liste des Utilisateurs</h2>
                <ul>
                    {% for user in users %}
                        <li>{{ user.getUser() }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="stat">
                <h2>Liste des Produits</h2>
                <ul>
                    {% for product in products %}
                        <li>{{ product.getName() }} - {{ product.getPrice() }}€ </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
    <section>
        <h2>Ajouter un Nouveau Produit</h2>
        {{ form(form) }}
    </section>
{% endblock %}
